<div class="container">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
      
        <h3>Personal info</h3>
        <%= form_for @user, :method => :PUT ,html: { multipart: true, id: "new_inv"} , class:"form-horizontal"  do |f| %>
        <!-- <form class="form-horizontal" role="form"> -->
          <div class="form-group">
            <%= image_tag current_user.try(:image) ,class: "avatar img-circle", style: 'height:100px;width:100px;'  %>
          <!-- <img src="//placehold.it/100" class="avatar img-circle" alt="avatar"> -->
          <div class="col-lg-8">
            <h6>Upload a different photo...</h6>
            
            <input type="file" class="form-control">
          </div>
          </div>
          <div class="">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
               <%= f.text_field :name, class: 'form-control',placeholder: "Your name.", required: true, readonly: (@user.admin ? true : false) %>
            </div>
          </div>
          <div class="">
            <label class="col-lg-3 control-label">Mobile:</label>
            <div class="col-lg-8">
               <%= f.number_field :mobile, class: 'form-control', required: true %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <%= f.email_field :email, class: 'form-control',placeholder: "Your name.", required: true, readonly: (@user.admin ? true : false) %>
            </div>
          </div>
          <h2 class="text-left">Address</h2>
            <div class="form_group col-md-8">
               <%= f.fields_for :address do |add| %>
               <label>Address Line</label>
               <%= add.text_field :address_line, class: 'form-control', required: true, readonly: (@user.admin ? true : false) %> 
               <label>Street</label>
               <%= add.text_field :street, class: 'form-control', required: true , readonly: (@user.admin ? true : false)%>
               <label>Landmark</label>
               <%= add.text_field :landmark, class: 'form-control', required: true , readonly: (@user.admin ? true : false)%>
               <label>city</label>
               <%= add.text_field :city, class: 'form-control', required: true , readonly: (@user.admin ? true : false)%>
               <label>State</label>
               <%= add.text_field :state, class: 'form-control', required: true , readonly: (@user.admin ? true : false)%>
               <label>Pincode</label>
               <%= add.number_field :pincode, class: 'form-control', required: true , readonly: (@user.admin ? true : false)%>
               <%end%>
            </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <%= f.submit "Create" , class: 'btn btn-primary btn-block'%>
            </div>
          </div>
          <%end%>
        <!-- </form> -->
      </div>
  </div>
</div>
<hr>